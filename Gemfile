  gem 'spring'
  gem 'sqlite3'
  gem 'mina'
  gem 'mina-sidekiq', :require => false
  gem 'mina-unicorn', :require => false
end

# Production dependencies.
group :production do
  gem 'pg'
  gem 'unicorn'
end

